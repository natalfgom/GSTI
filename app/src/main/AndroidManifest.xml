<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sobre_nosotros"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sobre_nosotros"
        android:supportsRtl="true"
        android:theme="@style/Theme.GSTI"
        tools:targetApi="31">

        <!-- Actividades existentes -->
        <activity
            android:name=".JuegosActivity"
            android:exported="false" />
        <activity
            android:name=".menuInicio.InicioFamiliar"
            android:exported="true" />
        <activity
            android:name=".menuInicio.InicioMedico"
            android:exported="true" />
        <activity
            android:name=".menuInicio.InicioPaciente"
            android:exported="true" />
        <activity
            android:name=".AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para la orientación del juego -->
        <activity
            android:name=".OrientacionActivity"
            android:exported="true" />

        <!-- Nueva actividad para la comprensión del juego -->
        <activity
            android:name=".ComprensionActivity"
            android:exported="true" />

        <!-- Nueva actividad para el juego de atención -->
        <activity
            android:name=".juegoAtencion.MecanicaAtencion"
            android:exported="true" />

        <!-- Actividad de éxito -->
        <activity
            android:name=".juegoAtencion.SuccessActivity"
            android:exported="true" />

        <!-- Actividad de fallo -->
        <activity
            android:name=".juegoAtencion.FailureActivity"
            android:exported="true" />

        <!-- Nueva actividad para el registro -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />


        <!-- Actividades para el juego de memoria-->
        <activity
            android:name=".juegoMemoria.MecanicaMemoria"
            android:exported="true" />
        <activity android:name=".juegoMemoria.PantallaFinalActivity">
        </activity>


        <activity
            android:name="com.example.gsti.juegoLenguaje.OrientacionJuegoLenguajeActivity"
            android:exported="true" />



        <!-- Actividad de mecánica del juego de lenguaje -->
        <activity android:name="com.example.gsti.juegoLenguaje.MecanicaLenguaje"
            android:label="Juego Lenguaje"
            android:exported="true" />

        <activity android:name=".juegoLenguaje.FelicitacionActivity" />


        <activity android:name=".juegoLenguaje.IntentarDeNuevoActivity" />






    </application>
</manifest>
