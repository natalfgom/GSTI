<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <include
        layout="@menu/toolbar" />

    <!-- Contenido Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Imagen "Sobre Nosotros" -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sobre_nosotros"
                android:contentDescription="@string/descripcioon_sobre_nosotros"
                android:layout_marginBottom="16dp" />

            <!-- Título "Sobre Nosotros" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sobre_nosotros"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Descripción de la aplicación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Descripcion_sobre_nostros"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Descripción adicional -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion_interfaz_cognitiva"
                android:textSize="16sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
