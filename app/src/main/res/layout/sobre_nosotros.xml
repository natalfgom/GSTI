<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <!-- Imagen "Sobre Nosotros" -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/sobre_nosotros"
        android:contentDescription="Ilustración sobre nosotros"
        android:layout_marginBottom="16dp" />

    <!-- Título "Sobre Nosotros" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobre Nosotros"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Descripción de la aplicación -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cognitiva es una aplicación diseñada para estimular cognitivamente a personas con Alzheimer a través de juegos interactivos y actividades personalizadas. Nuestro objetivo es mejorar la calidad de vida de los pacientes al fortalecer sus funciones mentales de manera lúdica y accesible. Cognitiva permite a los médicos configurar y personalizar los juegos según las necesidades de cada paciente, y monitorear su progreso a través de estadísticas claras y sencillas."
        android:textSize="16sp"
        android:textColor="#000000"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <!-- Descripción adicional -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con una interfaz amigable y fácil de usar, Cognitiva ofrece una herramienta efectiva para apoyar el tratamiento de trastornos cognitivos de manera innovadora."
        android:textSize="16sp"
        android:textColor="#000000"
        android:lineSpacingExtra="4dp"
        android:gravity="center"/>

</LinearLayout>
