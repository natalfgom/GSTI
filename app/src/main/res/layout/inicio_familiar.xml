<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:ignore="ExtraText">

    <!-- Toolbar -->
    <include
        layout="@menu/toolbar" />

    <!-- Contenido Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Botón Estadísticas -->
        <LinearLayout
            style="@style/BotonEstandar"
            android:id="@+id/btnEstadisticas">

            <ImageView
                style="@style/IconoEstandar"
                android:src="@drawable/ic_estadisticas"
                android:contentDescription="@string/titulo_estadisticas" />

            <TextView
                style="@style/TextoEstandar"
                android:text="@string/titulo_estadisticas" />
        </LinearLayout>

        <!-- Botón Notificaciones -->
        <LinearLayout
            style="@style/BotonEstandar"
            android:id="@+id/btnNotificaciones">

            <ImageView
                style="@style/IconoEstandar"
                android:src="@drawable/ic_notificaciones"
                android:contentDescription="@string/titulo_notificaciones" />

            <TextView
                style="@style/TextoEstandar"
                android:text="@string/titulo_notificaciones" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
